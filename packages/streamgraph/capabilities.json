{
  "dataRoles": [
    {
      "displayName": "X-Axis",
      "name": "xAxis",
      "kind": "Grouping",
      "description": "Fields for the horizontal axis (e.g., dates, time periods)"
    },
    {
      "displayName": "Y-Axis",
      "name": "yAxis",
      "kind": "Grouping",
      "description": "Categories displayed as stream layers"
    },
    {
      "displayName": "Values",
      "name": "values",
      "kind": "GroupingOrMeasure",
      "description": "The measure to display"
    },
    {
      "displayName": "Legend",
      "name": "legend",
      "kind": "Grouping",
      "description": "Field used to color the series"
    },
    {
      "displayName": "Group",
      "name": "group",
      "kind": "Grouping",
      "description": "Splits the streamgraph into small multiples (one panel per group)"
    }
  ],
  "tooltips": {
    "supportedTypes": {
      "default": true,
      "canvas": true
    },
    "roles": ["tooltips"]
  },
  "objects": {
    "categoryColors": {
      "displayName": "Data Colors",
      "properties": {
        "fill": {
          "displayName": "Color",
          "type": { "fill": { "solid": { "color": true } } }
        }
      }
    },
    "tooltipSettings": {
      "displayName": "Tooltips",
      "properties": {
        "enabled": {
          "displayName": "Enabled",
          "type": { "bool": true }
        },
        "style": {
          "displayName": "Style",
          "type": {
            "enumeration": [
              { "value": "powerbi", "displayName": "Power BI" },
              { "value": "custom", "displayName": "Custom" }
            ]
          }
        },
        "theme": {
          "displayName": "Theme",
          "type": {
            "enumeration": [
              { "value": "light", "displayName": "Light" },
              { "value": "dark", "displayName": "Dark" }
            ]
